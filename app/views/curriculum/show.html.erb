<%- model_class = Curriculum -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @curriculum.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:desc) %></dt>
      <dd><pre class="prettyprint"><%= @curriculum.desc %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:goals) %></dt>
      <dd><pre class="prettyprint"><%= @curriculum.goals %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              curriculum_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_curriculum_path(@curriculum), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              curriculum_path(@curriculum),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>